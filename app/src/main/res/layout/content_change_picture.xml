<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ChangePictureActivity"
    tools:showIn="@layout/activity_change_picture">

    <com.app.sell.view.SquareImageView
        android:id="@+id/change_picture_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/mv"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/change_picture_take_new_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/take_a_new_photo"/>

    <Button
        android:id="@+id/change_picture_from_gallery_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_an_existing_photo"/>

</LinearLayout>